{
  "$schema": "https://developer.microsoft.com/json-schemas/fabric/item/report/definition/visualContainer/2.4.0/schema.json",
  "name": "{{VISUAL_NAME}}",
  "position": {
    "x": 40,
    "y": 80,
    "width": 500,
    "height": 300,
    "z": 0,
    "tabOrder": 0
  },
  "visual": {
    "$schema": "https://developer.microsoft.com/json-schemas/fabric/item/report/definition/visualConfiguration/2.2.0/schema.json",
    "visualType": "lineChart",
    "drillFilterOtherVisuals": true,
    "query": {
      "queryState": {
        "Category": {
          "projections": [
            {
              "field": {
                "Column": {
                  "Expression": {
                    "SourceRef": {
                      "Entity": "{{DATE_TABLE}}"
                    }
                  },
                  "Property": "{{DATE_COLUMN}}"
                }
              },
              "queryRef": "{{DATE_TABLE}}.{{DATE_COLUMN}}",
              "displayName": "{{DATE_DISPLAY_NAME}}"
            }
          ]
        },
        "Y": {
          "projections": [
            {
              "field": {
                "Measure": {
                  "Expression": {
                    "SourceRef": {
                      "Entity": "{{MEASURE_TABLE}}"
                    }
                  },
                  "Property": "{{MEASURE_NAME}}"
                }
              },
              "queryRef": "{{MEASURE_TABLE}}.{{MEASURE_NAME}}",
              "displayName": "{{MEASURE_DISPLAY_NAME}}"
            }
          ]
        }
      }
    },
    "objects": {
      "categoryAxis": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            }
          }
        }
      ],
      "valueAxis": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            }
          }
        }
      ],
      "legend": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "false"
                }
              }
            }
          }
        }
      ],
      "lineStyles": [
        {
          "properties": {}
        }
      ],
      "dataPoint": [
        {
          "properties": {
            "showMarkers": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            }
          }
        }
      ]
    }
  },
  "_comments": {
    "_description": "PBIR Line Chart Visual Template - ideal for time series and trend data",
    "_usage": "Clone this file into your report's pages/[pageName]/visuals/[visualName]/ folder as visual.json",
    "_placeholders": {
      "{{VISUAL_NAME}}": "Unique 20-character identifier (e.g., 'line_sales_trend')",
      "{{DATE_TABLE}}": "The table containing the date/time column (e.g., 'Calendar')",
      "{{DATE_COLUMN}}": "The date column for X-axis (e.g., 'Date', 'Month')",
      "{{DATE_DISPLAY_NAME}}": "Display label for X-axis (e.g., 'Month')",
      "{{MEASURE_TABLE}}": "The table containing the measure (e.g., 'Sales')",
      "{{MEASURE_NAME}}": "The measure for Y-axis values (e.g., 'Total Revenue')",
      "{{MEASURE_DISPLAY_NAME}}": "Display label for measure (e.g., 'Revenue')"
    },
    "_position": {
      "x": "Horizontal position from left edge in pixels",
      "y": "Vertical position from top edge in pixels",
      "width": "Visual width in pixels (default page is 1280 wide)",
      "height": "Visual height in pixels (default page is 720 tall)",
      "z": "Z-order stacking (higher values on top)",
      "tabOrder": "Keyboard navigation order"
    },
    "_queryState_roles": {
      "Category": "X-axis field (typically dates/time periods)",
      "Y": "Y-axis field (numeric measure - can add multiple)",
      "Series": "Optional - multiple lines grouping field",
      "Tooltips": "Optional - additional tooltip fields"
    },
    "_objects_formatting": {
      "categoryAxis": "X-axis display settings",
      "valueAxis": "Y-axis display settings (can set min/max)",
      "legend": "Legend visibility and position",
      "lineStyles": "Line appearance (stepped, smooth, dashed)",
      "dataPoint": "Data point markers on lines"
    },
    "_tips": {
      "multipleLines": "Add more projections to Y role for multiple lines",
      "seriesField": "Add Series role to split data into multiple colored lines",
      "smoothLines": "Use lineStyles to enable smooth interpolation"
    }
  }
}
