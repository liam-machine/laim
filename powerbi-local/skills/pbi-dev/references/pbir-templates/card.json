{
  "$schema": "https://developer.microsoft.com/json-schemas/fabric/item/report/definition/visualContainer/2.4.0/schema.json",
  "name": "{{VISUAL_NAME}}",
  "position": {
    "x": 40,
    "y": 40,
    "width": 200,
    "height": 120,
    "z": 0,
    "tabOrder": 0
  },
  "visual": {
    "$schema": "https://developer.microsoft.com/json-schemas/fabric/item/report/definition/visualConfiguration/2.2.0/schema.json",
    "visualType": "card",
    "drillFilterOtherVisuals": false,
    "query": {
      "queryState": {
        "Values": {
          "projections": [
            {
              "field": {
                "Measure": {
                  "Expression": {
                    "SourceRef": {
                      "Entity": "{{MEASURE_TABLE}}"
                    }
                  },
                  "Property": "{{MEASURE_NAME}}"
                }
              },
              "queryRef": "{{MEASURE_TABLE}}.{{MEASURE_NAME}}",
              "displayName": "{{MEASURE_DISPLAY_NAME}}"
            }
          ]
        }
      }
    },
    "objects": {
      "labels": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            },
            "fontSize": {
              "expr": {
                "Literal": {
                  "Value": "45D"
                }
              }
            }
          }
        }
      ],
      "categoryLabels": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            }
          }
        }
      ],
      "wordWrap": [
        {
          "properties": {
            "show": {
              "expr": {
                "Literal": {
                  "Value": "true"
                }
              }
            }
          }
        }
      ]
    }
  },
  "_comments": {
    "_description": "PBIR Card Visual Template - displays single KPI values prominently",
    "_usage": "Clone this file into your report's pages/[pageName]/visuals/[visualName]/ folder as visual.json",
    "_placeholders": {
      "{{VISUAL_NAME}}": "Unique 20-character identifier (e.g., 'card_total_sales')",
      "{{MEASURE_TABLE}}": "The table containing the measure (e.g., 'Sales')",
      "{{MEASURE_NAME}}": "The measure to display (e.g., 'Total Revenue')",
      "{{MEASURE_DISPLAY_NAME}}": "Label shown below the value (e.g., 'Total Revenue')"
    },
    "_position": {
      "x": "Horizontal position from left edge in pixels",
      "y": "Vertical position from top edge in pixels",
      "width": "Visual width in pixels (cards are typically 150-250 wide)",
      "height": "Visual height in pixels (cards are typically 100-150 tall)",
      "z": "Z-order stacking (higher values on top)",
      "tabOrder": "Keyboard navigation order"
    },
    "_queryState_roles": {
      "Values": "The measure or aggregated value to display"
    },
    "_objects_formatting": {
      "labels": "Main value display (font size, color, units)",
      "categoryLabels": "Label/title below the value",
      "wordWrap": "Enable text wrapping for long labels"
    },
    "_visualType_alternatives": {
      "card": "Classic single-value card (this template)",
      "cardVisual": "New card visual with more formatting options",
      "multiRowCard": "Multiple values in card format"
    },
    "_tips": {
      "fontSize": "Value is in points with 'D' suffix (e.g., '45D' = 45pt)",
      "layout": "Cards work well in horizontal rows at top of page for KPIs",
      "formatting": "Use measure FORMAT function for currency/percentage display"
    }
  }
}
